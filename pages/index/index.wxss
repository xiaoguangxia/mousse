/* pages/home/index.wxss */

.page-section{
  position: relative;
}
.page-section swiper{
  width: 100%;
  height: 663rpx;
}
.page-section swiper .swp-item image{
  width: 100%;
  height: 663rpx;
}
/*用来包裹所有的小圆点  */
 
.dots {
  display: flex;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20rpx;
}
 
/*未选中时的小圆点样式 */
 
.dot {
  width: 30rpx;
  height: 8rpx;
  background: #FFFFFF;
  border-radius: 5rpx;
  margin-right: 20rpx;
}
 
/*选中以后的小圆点样式  */
 
.active {
  width: 30rpx;
  height: 8rpx;
  background: #F59359;
}
/*保障*/
.ensure{
  margin: 20rpx auto 0rpx;
  width: 100%;
  height: 130rpx;
}
/* 公司简介 */
.company_intro{
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
  padding:0rpx 30rpx ;
  margin: 20rpx auto 60rpx;
  display: block;
  line-height: 32rpx;
  color: #141414;
}
.home-container img,.home-container image{
  max-width: 100%;
}
/*轮播图*/

.page-section2{
  position: relative;
  margin-bottom: 30rpx;
  white-space:nowrap;
}
.page-section2 .top-type-scroll{
  white-space:nowrap;
}
.page-section2 .top-type-scroll{
  width: 100%;
  box-sizing: border-box;
}
.page-section2 .top-type-scroll .swp-item{
  display: inline-block;
  width: 340rpx;
  height: 200rpx;
  position: relative;
}
.page-section2 .top-type-scroll .swp-item image{
  width:100% !important;
  height: 100%;
  border-radius: 8rpx;
}
.page-section2 .top-type-scroll .swp-item .text{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 58;
}
.page-section2 .top-type-scroll .swp-item .text .h3{
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
  line-height: 1;
  color: #141414;
  margin-bottom: 10rpx;
}
.page-section2 .top-type-scroll .swp-item .text .dec{
  font-size: 20rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #999999;
}
/*分类*/
.list-type{
  display: flex;
  flex-wrap: wrap;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin:0rpx 30rpx 40rpx 30rpx;
  padding-right: 15rpx;
}
.list-type .list-item{
  width: 50%;
  display: flex;
  align-items: center;
}
.list-type .list-item image{
  width: 150rpx;
  height: 90rpx;
  margin-left: auto;
}
.list-type .list-item .text{
  padding: 45rpx 0rpx 40rpx 30rpx;
}
.list-type .list-item .text .h3{
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
  line-height: 1;
  color: #141414;
  margin-bottom: 10rpx;
}
.list-type .list-item .text .dec{
  font-size: 20rpx;
  font-family: Source Han Sans CN;
  font-weight: 300;
  line-height: 1;
  color: #999999;
}
/*现货特价*/
.xhtj{
  padding: 40rpx 0 40rpx 30rpx;
  background-color: #FFFFFF;
}
.xhtj .h2{
  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
  line-height: 1;
  color: #303133;
  letter-spacing: 4rpx;
}
.xhtj .more{
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #333333;
  text-align: right;
  padding-right: 30rpx;
}
.xhtj .p{
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #999999;
  margin: 10rpx auto 30rpx;
}

.page-section-spacing{
  margin: 0rpx auto 30rpx;
}
.scroll-view_H{
  white-space: nowrap;
  width: auto;
}
.scroll-view-item{
  height: 320rpx;
}
.scroll-view-item_H{
  display: inline-block;
  width: 212rpx;
  /* height: 300rpx; */
  margin-right: 30rpx;
  border-radius: 8rpx;
}
.xhtj .scroll-view-item_H image.ban-img{
  width:100% !important;
  height: 216rpx;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.xhtj .scroll-view-item_H  .title{
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #333333;
  margin-bottom: 32rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.xhtj .scroll-view-item_H  .money{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
  color: #F59359;
  line-height: 1;
  color: #F59359;
  margin-bottom: 20rpx;
}
.xhtj .scroll-view-item_H .bt-group{
  display: flex;
  align-items: center;
}
.xhtj .scroll-view-item_H .bt-group text{
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #BBBBBB;
  text-decoration:line-through;
}
.xhtj .scroll-view-item_H .bt-group .cart-img{
  width: 44rpx;
  height: 44rpx;
  background: #F59359;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
}
.xhtj .scroll-view-item_H .bt-group .cart-img image{
  width: 30rpx;
  height: 30rpx;
}
.line{
  width: 84rpx;
  height: 6rpx;
  background: #F59359;
  border-radius: 4rpx;
  margin:0 auto 40rpx;
}
