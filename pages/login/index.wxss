  display: block;
  margin: 48rpx auto 40rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 1;
  color: #0E0D0D;
}
.p{
  display: block;
  text-align: center;
  font-size: 26rpx;
