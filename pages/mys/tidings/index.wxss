/* pages/mys/tidings/index.wxss */
.tidings-main{
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  position: absolute;
  height: calc(100% â€“ 20rpx);
  width: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  overflow: auto;
}
.tidings-main .tidings-list{
  display: flex;
  border-bottom: 1rpx solid #F8F8F8;
  padding: 30rpx 0;
  box-sizing: border-box;
}
.tidings-main .tidings-list:last-child{
  border-bottom: none;
}
.tidings-main .tidings-list .img{
  width: 82rpx;
  height: 82rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #141414;
  border: 1rpx solid #E6E6E6;
  margin-right: 30rpx;
}
.tidings-main .tidings-list .img image{
  width: 40rpx;
  height: 42rpx;
}
.tidings-main .tidings-list .left{
  width: 400rpx;
}
.tidings-main .tidings-list .left .title{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #666666;
  margin-bottom: 20rpx;
}
.tidings-main .tidings-list .left .des{
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 35rpx;
  color: #999999;
  /* white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis; */
}
.tidings-main .tidings-list .right{
  text-align: right;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 36rpx;
  color: #999999;
  margin-left: auto;
}