/* 新增收货地址 */
page{
  background-color: #ffffff;
}
.addres-detail-main{
  padding:0 30rpx 120rpx;
  box-sizing: border-box;
}
.addres-detail-main .row{
  display: flex;
  padding: 60rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #F5F5F5;
}
.addres-detail-main .row.on{
  min-height: 210rpx;
}
.van-checkbox__icon{
  border-radius: 8rpx;
}
.van-checkbox__icon.van-checkbox__icon--checked{
  background-color: #141414;
  border-color: #141414;
}
.addres-detail-main .row text{
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #141414;
  margin-right: auto;
  width: 260rpx;
}
.addres-detail-main .row  input{
  flex: 1;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  text-align: right;
}
.addres-detail-main .row   .dw{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
}
.addres-detail-main .row   .dw image{
  width: 42rpx;
  height: 42rpx;
  margin-left: 10rpx;
}
.addres-detail-main .row  textarea {
  flex: 1;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  text-align: right;
  text-align: right;
}
.addre-wx{
  width: 100%;
  height: 92rpx;
  background: #F9F9F9;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  text-align: center;
  line-height: 92rpx;
  color: #141414;
}
.addre-wx.on{
  color: #F59359;
}
.btn-group{
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  height: 120rpx;
  padding: 15rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #EFEFEF;
  box-sizing: border-box;
}
.btn-group button{
  width: 610rpx;
  height: 90rpx;
  background: #141414;
  border-radius: 8rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #FFFFFF
}