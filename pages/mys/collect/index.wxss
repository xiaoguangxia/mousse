/* pages/mys/collect/index.wxss */
page{
  background-color: #ffffff;
}
.collect-container{
  display: flex;
  flex-direction: column;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding-top: 30rpx;
}
/* 分类选项tab */
.collect-container .van-tab{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #666666;
  flex-basis: auto !important;
  padding:0rpx 30rpx 25rpx;
}
.collect-container .van-tab .van-ellipsis{
  text-overflow: unset;
  overflow: visible;
}
.collect-container .van-tab.van-tab--active{
  font-weight: 600;
}
.collect-container .van-tabs__nav{
  border-bottom: 2rpx solid #F8F8F8;
}
.collect-container .van-tabs__line{
  width: 56rpx !important;
  border-radius: 8rpx;
  height: 6rpx;
  background-color: #141414;
}
/* 无数据 */
.collect-container .nodata{
  margin: 318rpx auto auto;
  text-align: center;
  overflow: hidden;
}
.collect-container .nodata image{
  width: 304rpx;
  height: 304rpx;
  margin-bottom: 30rpx;
}
.collect-container .nodata .text{
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 1;
  color: #141414;
  text-align: center;
}
/* 户型列表 */
.house-list{
  display: flex;
  flex-direction: column;
  font-size: 0;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.house-list .house-item{
  display: flex;
  margin-bottom: 30rpx;
}
.house-list .house-item image{
  width: 212rpx;
  height: 216rpx;
  border-radius: 8px;
  margin-right: 30rpx;
}
.house-list .house-item .text{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-top: 35rpx;
  box-sizing: border-box;
}
.house-list .house-item .text .title{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
  line-height: 1;
  color: #141414;
  margin-bottom: 30rpx;
  width: 460rpx;
  text-align: justify;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.house-list .house-item .text .des{
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  margin-bottom: 30rpx;
  color: #333333;
  width: 332rpx;
  text-align: justify;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.house-list .house-item .text button{
  text-align: center;
  width: 198rpx;
  height: 70rpx;
  background: #F59359;
  opacity: 1;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 70rpx;
  color: #FFFFFF;
  margin:0 0 0 auto;
}
.house-list .house-item .text button::after{
  border: none;
}