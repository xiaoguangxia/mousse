/* 个人信息 */
page{
  background-color: #ffffff;
}
.mys-userinfo{
  padding: 0rpx 30rpx;
}
.mys-userinfo .row-group{
  display: flex;
  align-items: center;
  padding: 30rpx 0rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #F8F8F8;
}
.mys-userinfo .row-group:last-child{
  border-bottom: none;
}
.mys-userinfo .row-group .left{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #333333;
  margin-right: auto;
}
.mys-userinfo .row-group .right{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #141414;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
  flex: 1;
}
.mys-userinfo .row-group .right button{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  padding: 0;
  margin: 0;
  background-color: transparent;
  margin-left: auto;
  width: 100%;
  text-align: right;
}
.mys-userinfo .row-group .right button::after{
  border: none;
}
.mys-userinfo .row-group .right .icon{
  margin-left: 10rpx;
  width: 20rpx;
  height: 20rpx;
}
.mys-userinfo .row-group .right .uimg{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-left:auto ;
}
.pop{
  padding: 60rpx 30rpx 40rpx;
}
.pop textarea{
  width: 100%;
  border: 1rpx solid #cccccc;
  color: #141414;
  border-radius: 8rpx;
  padding:20rpx;
  height: 200rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
}
.pop .btn-group{
  display: flex;
  align-items: center;
  width: 690rpx;
}
.pop .btn-group .save{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #141414;
  opacity: 1;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  text-align: center;
  margin-top: 30rpx;
  color: #FFFFFF;
  margin-right: 40rpx;
}
.pop .btn-group .cancel{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #e5e5e5;
  opacity: 1;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  text-align: center;
  margin-top: 30rpx;
  color: #FFFFFF;
}