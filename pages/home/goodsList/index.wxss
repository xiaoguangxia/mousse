/* 套餐列表 */
.goods-main{
  box-sizing: border-box;
}
/* 商品检索 */
.goods-main .search-main{
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 30rpx 30rpx 40rpx;
}
.goods-main  .search-main .inp{
  display: flex;
  align-items: center;
  width: 531rpx;
  height: 64rpx;
  background: #F2F2F2;
  border-radius: 32rpx;
  padding: 0rpx 20rpx;
}
.goods-main  .search-main .inp image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 23rpx;
}
.goods-main  .search-main .inp input{
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #141414;
}
.goods-main  .search-main .search-text{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 69rpx;
  color: #666666;
  margin-left: 20rpx;
}
/* 没有数据 */
.goods-main .nodata{
  margin: 105rpx auto 80rpx;
  text-align: center;
}
.goods-main .nodata image{
  width: 304rpx;
  height: 304rpx;
  margin-bottom: 30rpx;
}
.goods-main .nodata .text{
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 1;
  color: #141414;
  text-align: center;
}
/* 首图 */
.goods-main  .ban-main{
  background: #ffffff;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  margin: 0 auto;
  padding: 0 30rpx 40rpx;
  font-size: 0;
}
.goods-main  .ban-main image{
  width: 690rpx;
  height: 300rpx;
}

.goods-main  .ban-main .title{
  top: 226rpx;
  left: 50rpx;
  border-radius: 8rpx;
  min-width: 147rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  background: #000000;
  position: absolute;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #FFFFFF;
}
.goods-main  .ban-main .text{
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 44rpx;
  padding: 40rpx 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #666666;
  background: #F7F7F7;
  border-radius: 0rpx 0rpx 8rpx 8rpx;
}
/* 分类选项 */
.setMeal-container{
  background-color: #ffffff;
}
.setMeal-container .van-tab{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #666666;
  flex-basis: auto !important;
  padding:0rpx 30rpx 25rpx;
}
.setMeal-container .van-tab.van-tab--active{
  font-weight: 600;
}
.setMeal-container .van-tabs__nav{
  border-bottom: 2rpx solid #F8F8F8;
}
.setMeal-container .van-tabs__line{
  width: 56rpx !important;
  border-radius: 8rpx;
  height: 6rpx;
  background-color: #141414;
}
/* 小分类 */

.setMeal-container  .goodslist-type{
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
  white-space: nowrap;
  margin-bottom: 40rpx;
}
.setMeal-container  .goodslist-type .scroll-view-item:nth-child(1){
  margin-left: 0;
}
.setMeal-container  .goodslist-type .scroll-view-item{
  margin-left: 50rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
  letter-spacing: 2rpx;
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
}
.setMeal-container  .goodslist-type .scroll-view-item.on{
  background: #FAFAFA;
  border-radius: 12rpx;
  font-weight: 600;
  padding: 0rpx 20rpx;
  color: #F59359;
}
/* 详细规格分类 */

.setMeal-container  .search-type{
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
  white-space: nowrap;
  margin-bottom: 20rpx;
  line-height: 1;
}
.setMeal-container  .search-type .scroll-view-item:nth-child(1){
  margin-left: 0;
}
.setMeal-container  .search-type .scroll-view-item{
  margin-left: 60rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
  display: inline-block;
  line-height: 1;
}
.setMeal-container  .search-type .scroll-view-item .icon1{
  width: 14rpx;
  height: 14rpx;
  margin-left: 10rpx;
}
.setMeal-container  .search-type .scroll-view-item.on{
  font-weight: 600;
  color: #F59359;
}

/* 筛选条件 */
.sxtj{
  padding: 30rpx 0rpx 0rpx;
  position: relative;
}
/* 户型 */
.sxtj .hx{
  padding: 0 30rpx;
}
.sxtj .hx .sea-title{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
  line-height: 1;
  color: #141414;
  margin-bottom: 20rpx;
  padding-top: 20rpx;
}
.sxtj .hx:nth-child(1) .sea-title{
  padding-top: 0;
}
.sxtj .sea-box{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.sxtj .sea-box .box{
  font-size: 26rpx;
  background: #FAFAFA;
  border-radius: 12rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  height: 50rpx;
  padding: 0 20rpx;
  line-height: 50rpx;
  text-align: center;
  color: #999999;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}
.sxtj .sea-box .box.on{
  background: rgba(246, 147, 90, 0.11);
  color: #F59359;
}
.sxtj .btn-group{
  display: flex;
  align-items: center;
  width: 100%;
}
.sxtj .btn-group button::after{
  border: none;
}
.sxtj .btn-group .reset{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #F8F8F8;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #666666;
  outline: none;
  border-radius:0 ;
}
.sxtj .btn-group .saveSear{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #FFFFFF;
  background: #F59359;
  outline: none;
  border-radius:0 ;
}
.sxtj .fg{
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #F8F8F8;
}
.sxtj .fg text{
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
  margin-right: auto;
}
.sxtj .fg.on text{
  color: #F59359;
}
/* 列表 */
.setMeal-container .list{
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 30rpx 0rpx;
}
.setMeal-container .list .list-child{
  width: 336rpx;
  margin-right: auto;
}
.setMeal-container .list .list-child image{
  width: 100%;
  height: 334rpx;
  margin-bottom: 24rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.setMeal-container .list .list-child .title{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #333333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-bottom: 32rpx;
  text-align: center;
}
.setMeal-container .list .list-child .money{
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #F59359;
  margin-bottom: 40rpx;
  text-align: center;
}