/* pages/classifys/classify/index.wxss */
.classify-main{
  display: flex;
  flex-direction: column;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  box-sizing: border-box;
}
.classify-main .search-box{
  display: flex;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.classify-main .search-box .inp{
  display: flex;
  align-items: center;
  width: 531rpx;
  height: 64rpx;
  background: #F2F2F2;
  border-radius: 32rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
}
.classify-main .search-box .inp image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 23rpx;
}
.classify-main .search-box .inp input{
  font-size: 26rpx;
  width: 100%;
  font-family: Source Han Sans CN;
  color: #141414;
  font-weight: 400;
}
.classify-main .search-box .search-text{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #666666;
}
/* 分类 */
.type-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx 40rpx;
  background-color: #ffffff;
}
/* 大分类 */
.top-type-scroll{
  white-space:nowrap;
}
.type-box .type-item{
  display: inline-block;
  text-align: center;
  padding: 30rpx;
  min-width: 140rpx;
  box-sizing: border-box;
  background: #F8F8F8;
  margin-right: 43rpx;
}
.type-box .type-item image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}
.type-box .type-item .text{
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 1;
  color: #141414;
}

/* 主体内容 */
.goods-box{
  display: flex;
  font-size: 0;
  background-color: #ffffff;
  flex: 1;
}
.goods-box .tab-head{
  /* height: calc(100% - 476rpx); */
  margin-right: 30rpx;
  width: 170rpx;
  background: #F8F8F8;
  white-space:nowrap;
}
.goods-box .tab-head .item-text{
  height: 90rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 90rpx;
  color: #666666;
  text-align: center;
  position: relative;
}
.goods-box .tab-head .item-text.on{
  background-color: #ffffff;
  color: #141414;
  font-weight: 600;
}
.goods-box .tab-head .item-text .left-bar{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 40rpx;
  background: #F59359;
  border-radius: 3rpx;
}

/* 商品 */
.goods-box  .tab-content{
  flex: 1;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.goods-box  .tab-content .fban{
  width: 100%;
  box-sizing: border-box;
  height: 190rpx;
  margin-bottom: 47rpx;
}
.goods-box  .tab-content .flex-classfy{
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 35rpx;
}
.goods-box  .tab-content .flex-classfy .child{
  text-align: center;
  margin-right: 60rpx;
}
.goods-box  .tab-content .flex-classfy .child:nth-child(3n+3){
  margin-right: 0;
}
.goods-box  .tab-content .flex-classfy .child image{
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 30rpx;
}
.goods-box  .tab-content .flex-classfy .child .clssfy-text{
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #141414;
  margin-bottom: 30rpx;
}