/* pages/components/standards/index.wxss */
.compon-standards{
  width: 750rpx;
  padding: 120rpx 0rpx 0rpx;
  font-size: 0;
}
.compon-standards .h{
  width: 100%;
  height: 103rpx;
}
.compon-standards .info{
  background-color: #ffffff;
  border-radius: 8rpx 8rpx 0px 0px;
  margin: 0rpx auto;
  padding: 143rpx 0rpx 40rpx;
  position: relative;
  text-align: center;
}
.compon-standards .info .shop-img{
  position: absolute;
  top: -103rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 206rpx;
  height: 206rpx;
}
.compon-standards .info  .close{
  position: absolute;
  top:30rpx;
  right: 30rpx;
  width: 20rpx;
  height: 20rpx;
}
.compon-standards .info .price{
  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #F59359;
  margin-bottom: 35rpx;
}
.compon-standards .info .shop-name{
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 46rpx;
  color: #999999;
}
/* 规格尺寸详情 */
.compon-standards .ggcc{
  padding: 0 30rpx 120rpx;
  background-color: #ffffff;
}
.compon-standards .ggcc .shop-title{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
  line-height: 1;
  color: #141414;
  padding: 40rpx 0rpx 30rpx;
}
.compon-standards .ggcc .ggcc-items{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.compon-standards .ggcc .ggcc-items .items-child{
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #F3F3F3;
  border-radius: 8rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
}
.compon-standards .ggcc .ggcc-items .items-child.on{
  color: #141414;
  border: 1px solid #141414;
  box-shadow: 0px 3rpx 20rpx #ECE8E8;
}
/* 确定 */
.compon-standards .btn-tool{
  width: 750rpx;
  height: 120rpx;
  background: #FFFFFF;
  border: 1px solid #EFEFEF;
  padding: 10rpx 70rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.compon-standards .btn-tool button{
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 8rpx;
  background-color: #141414;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}
.compon-standards .btn-tool button::after{
  border: none;
}
/* 数量 */
.count-group{
  display: flex;
  box-sizing: border-box;
}
.count-group .mone-ico{
  display: flex;
  box-sizing: border-box;
  align-items: center;
  margin-left: auto;
}
.count-group .mone-ico .jian{
  width: 54rpx;
  height: 54rpx;
  border: 1px solid #F2F2F2;
  border-radius: 8rpx 0rpx 0rpx 8rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.count-group .mone-ico .jian.on{
  background: #F7F8FA;
}
.count-group .mone-ico .jian image{
  width: 34rpx;
  height: 34rpx;
  box-sizing: border-box;
}
.count-group .mone-ico .jia{
  width: 54rpx;
  height: 54rpx;
  border: 1px solid #F2F2F2;
  border-radius:  0rpx 8rpx 8rpx 0rpx ;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}
.count-group .mone-ico .jia image{
  width: 33rpx;
  height: 34rpx;
  box-sizing: border-box;
}
.count-group .mone-ico .num{
  padding:0 8rpx;
  width: 54rpx;
  height: 54rpx;
  text-align: center;
  justify-content: center;
  font-size: 26rpx;
  color: #141414;
  display: flex;
  box-sizing: border-box;
  align-items: center;
  border: 1px solid #F2F2F2;
}