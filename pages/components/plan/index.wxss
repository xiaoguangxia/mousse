/* 商品详情样式 */
.goodsDet-group{
  margin: 10rpx -30rpx -30rpx;
}
.goodsDet-group .goods-chil{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.goodsDet-group .goods-chil .left{
  margin-right: 34rpx;
}
.goodsDet-group .goods-chil .right{
  display: flex;
  align-items: center;
  flex: 1;
}
.goodsDet-group .goods-chil .right .shop-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.goodsDet-group .goods-chil .right .text{
  flex: 1;
}
.goodsDet-group .goods-chil .right .text .title{
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
  line-height: 69rpx;
  color: #141414;
}
.goodsDet-group .goods-chil .right .text .des{
  font-size: 20rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 30rpx;
  color: #999999;
  padding-left: 10rpx;
  letter-spacing: 3rpx;
}

.goodsDet-group .goods-chil .right .text .mone-ico{
  display: flex;
  box-sizing: border-box;
  align-items: center;
}
.goodsDet-group .goods-chil .right .text .mone-ico text{
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 57rpx;
  color: #F59359;
  margin-right: auto;
  box-sizing: border-box;
}
.goodsDet-group .goods-chil .right .text .mone-ico .jian{
  width: 54rpx;
  height: 54rpx;
  border: 1px solid #F2F2F2;
  border-radius: 8rpx 0rpx 0rpx 8rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.goodsDet-group .goods-chil .right .text .mone-ico .jian.on{
  background: #F7F8FA;
}
.goodsDet-group .goods-chil .right .text .mone-ico .jian image{
  width: 34rpx;
  height: 34rpx;
  box-sizing: border-box;
}
.goodsDet-group .goods-chil .right .text .mone-ico .jia{
  width: 54rpx;
  height: 54rpx;
  border: 1px solid #F2F2F2;
  border-radius:  0rpx 8rpx 8rpx 0rpx ;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}
.goodsDet-group .goods-chil .right .text .mone-ico .jia image{
  width: 33rpx;
  height: 34rpx;
  box-sizing: border-box;
}
.goodsDet-group .goods-chil .right .text .mone-ico .num{
  padding:0 8rpx;
  width: 54rpx;
  height: 54rpx;
  text-align: center;
  justify-content: center;
  
  display: flex;
  box-sizing: border-box;
  align-items: center;
  border: 1px solid #F2F2F2;
}
.allSelect{
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #666666;
}

.btn-groups{
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  border-top: 1px solid #E6E6E6;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  z-index: 998;
}
.btn-groups .left{
  margin-right: auto;
  display: flex;
  align-items: center;
}

.btn-groups .left .removeBtn{
  width: 88rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: #F59359;
  border-radius: 8rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #FFFFFF;
  padding: 0;
}
.btn-groups .left .removeBtn::after{
  border: none;
}
.btn-groups .right{
  display: flex;
  align-items: center;
}
.btn-groups .right .info{
  font-size: 20rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 1;
  color: #999999;
  margin-right: 60rpx;
  text-align: right;
}
.btn-groups .right .info .count:nth-child(1){
  margin-bottom: 15rpx;
}
.btn-groups .right .info .count .total{
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
  line-height: 1;
  color: #141414;
}

.btn-groups .right .saveBtn{
  width: 230rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #141414;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #FFFFFF;
  padding: 0;
}
.btn-groups .right .saveBtn::after{
  border: none;
}