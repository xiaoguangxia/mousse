/* pages/components/plan/index.wxss */
.plan-main {
  width: 750rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}
.plan-main .ban{
  width: 750rpx;
}
.plan-main  .sp{
  padding: 40rpx 30rpx;
}
.coll-item{
  margin-bottom: 40rpx;
}
.plan-main  .sp .coll-box{
  display: flex;
  align-items: center;
  background-color: #F3F3F3;
  padding: 25rpx 30rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
}
.plan-main  .sp .coll-box .coll-img{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
